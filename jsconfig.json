{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@altolith/base/*": [ "../altolith-deploy/assets/src/*" ],
			"@altolith/utils/*": [ "../altolith-deploy/assets/src/utils/*" ],
			"@altolith/components/*": [ "../altolith-deploy/assets/src/components/*" ],
			"@altolith/hooks/*": [ "../altolith-deploy/assets/src/hooks/*" ],
			"@altolith/constants/*": [ "../altolith-deploy/assets/src/constants/*" ],
			"@altolith/contexts/*": [ "../altolith-deploy/assets/src/contexts/*" ],
			"@altolith/services/*": [ "../altolith-deploy/assets/src/services/*" ],
			"@altolith/providers/*": [ "../altolith-deploy/assets/src/providers/*" ],
			"@altolith/publish/*": [ "../altolith-deploy/assets/src/publish/*" ],
			"@altolith/admin/*": [ "../altolith-deploy/assets/src/admin-settings/*" ]
		},
		"jsx": "react",
		"module": "esnext",
		"target": "es2017",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"assets/src/**/*"
	],
	"exclude": [
		"node_modules",
		"vendor",
		"coverage",
		"assets/build"
	]
}
